{
  "test_suite": {
    "name": "Cursor Bundle Advanced Test Suite",
    "version": "07-tkinter-improved-v2.py",
    "description": "Comprehensive testing framework with policy enforcement, performance monitoring, and security validation"
  },
  "execution": {
    "parallel_jobs": 4,
    "timeout_seconds": 300,
    "retry_count": 3,
    "verbose_output": true,
    "fail_fast": false
  },
  "reporting": {
    "formats": ["json", "html", "junit", "console"],
    "include_performance_metrics": true,
    "include_security_scan": true,
    "save_artifacts": true,
    "retention_days": 30
  },
  "test_categories": {
    "policy": {
      "enabled": true,
      "critical": true,
      "tests": [
        "policy_enforcer",
        "consolidated_policies", 
        "github_actions_status"
      ]
    },
    "performance": {
      "enabled": true,
      "critical": false,
      "thresholds": {
        "startup_time_max": 5.0,
        "memory_usage_max": 90.0,
        "disk_io_time_max": 10.0
      }
    },
    "security": {
      "enabled": true,
      "critical": true,
      "scan_patterns": [
        "password.*=.*['\"][^'\"]{8,}",
        "secret.*=.*['\"][^'\"]{16,}",
        "key.*=.*['\"][^'\"]{20,}",
        "token.*=.*['\"][^'\"]{20,}"
      ]
    },
    "integration": {
      "enabled": true,
      "critical": false,
      "docker_required": false,
      "vagrant_required": false
    }
  },
  "notifications": {
    "slack_webhook": "",
    "email_recipients": [],
    "on_failure_only": true
  },
  "ci_integration": {
    "github_actions": true,
    "junit_xml_path": "test-results/reports/junit_*.xml",
    "coverage_threshold": 80,
    "fail_on_security_issues": true
  }
}